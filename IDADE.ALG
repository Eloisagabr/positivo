algoritmo "IDADE"

var

   idade: real

inicio
// Se o de Comandos
 escreval ("ENTRADA PERMITIDA APENAS PARA MAIORES DE 18 ANOS. QUAL SUA IDADE?")
 leia (idade)

    se idade <= 18 entao
    escreval ("VOCÊ É MENOR DE IDADE. !NEGADO!")

    senao
    escreval ("ENTRADA PERMITIDA")

fimse

fimalgoritmo